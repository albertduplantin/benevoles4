rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection users
    match /users/{userId} {
      // Lecture et écriture autorisées pour tous (mode développement)
      // À restreindre en production avec authentification Clerk
      allow read, write: if true;
    }

    // Règles pour les autres collections
    match /missions/{missionId} {
      allow read, write: if true;
    }

    match /slots/{slotId} {
      allow read, write: if true;
    }

    match /bookings/{bookingId} {
      allow read, write: if true;
    }

    // Règle par défaut: refuser tout accès non défini
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
